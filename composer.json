{
    "name": "stripeAPIHandler",
    "description": "Microservice for Handling API Communication with Stripe",
    "keywords": ["microservice", "rest", "sattlerio", "psr7"],
    "homepage": "http://github.com/slimphp/Slim-Skeleton",
    "license": "MIT",
    "authors": [
        {
            "name": "Georg Sattler",
            "email": "georg@sattler.io",
            "homepage": "https://sattler.io"
        }
    ],
    "require": {
        "php": ">=5.5.0",
        "slim/slim": "^3.1",
        "monolog/monolog": "^1.17",
        "stripe/stripe-php": "^6.4",
        "ramsey/uuid": "^3.7"
    },
    "require-dev": {
        "phpunit/phpunit": ">=4.8 < 6.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "process-timeout" : 0
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public public/index.php",
        "test": "phpunit"
    }

}
